$rem
   BASIS  =  LACVP                  # Set that is better suited for Metal Complexes
   ECP  =  fit-LACVP
   METHOD  =  B3LYP   
   JOB_TYPE  =  Optimization        # All of the commands in this half of the code find the optimal geometry of the complex
   GEOM_OPT_MAX_CYCLES  =  200
   SCF_CONVERGENCE  =  8
   SCF_MAX_CYCLES  =  200
   GUI  =  0                        # GUI = 0 means it only saves the final optimized output
$end



$molecule
read
$end


$rem
   BASIS  =  LACVP
   ECP  =  fit-LACVP
   METHOD  =  B3LYP
   JOB_TYPE  =  SP                # This half of the code takes the optimized geometry from part 1 and uses it to calculate parameters like excited states
   SCF_CONVERGENCE  =  8
   SCF_MAX_CYCLES  =  200
   CIS_N_ROOTS  =  30
   RPA  =  1
   NTO_PAIRS  =  2
   GUI  =  2

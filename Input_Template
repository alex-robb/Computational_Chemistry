   BASIS = 6-31G**              # Same basis set for consistency with optimization
   METHOD = B3LYP               # Range-separated hybrid functional; better for charge-transfer and excited states
   JOB_TYPE = SP                # Single-point energy calculation using optimized geometry
   SCF_CONVERGENCE = 8          # Tight SCF convergence
   SCF_MAX_CYCLES = 100         # Max SCF cycles
   CIS_N_ROOTS = 10             # Number of excited states to compute
   RPA = 1                      # Enables TDDFT (Time-Dependent DFT)
   NTO_PAIRS = 2		            # Draw First 2 NTOs
   GUI = 2                      # Enables detailed output for visualization tools (e.g., NTOs, orbitals)
$end

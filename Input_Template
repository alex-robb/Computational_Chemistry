$rem
   BASIS = 6-31G**              # Basis set: split-valence with polarization functions on all atoms
   METHOD = B3LYP               # DFT functional: hybrid functional suitable for ground-state optimization
   JOB_TYPE = Optimization      # Specifies geometry optimization
   GEOM_OPT_MAX_CYCLES  =  200  # Number of Attempts at Geometry
   SCF_CONVERGENCE = 8          # Tight SCF convergence threshold (default is 6)
   SCF_MAX_CYCLES = 100         # Maximum number of SCF iterations allowed
   GUI = 2                      # Enables detailed output for visualization tools (e.g., orbitals, densities)
$end


